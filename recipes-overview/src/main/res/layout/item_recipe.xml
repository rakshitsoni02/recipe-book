<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RecipeArticle.View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/i_recipe_title"
            style="@style/RecipeArticle.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Elon Musk says Tesla can't yet launch in India" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:minHeight="@dimen/image_thumbnail"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/f_container_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginEnd="@dimen/d4"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/i_recipe_description"
            style="@style/RecipeArticle.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ABC Recipe" />

    </LinearLayout>

</androidx.cardview.widget.CardView>