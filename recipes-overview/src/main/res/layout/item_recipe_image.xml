<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RecipeArticle.View"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recipe_image"
        android:layout_width="@dimen/image_thumbnail"
        android:layout_height="@dimen/image_thumbnail"
        android:padding="@dimen/d0_third"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_add_24x24" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recipe_delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/d0_third"
        app:srcCompat="@drawable/ic_delete_24x24" />
</androidx.cardview.widget.CardView>






